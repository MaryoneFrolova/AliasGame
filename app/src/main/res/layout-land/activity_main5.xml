<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/linear"
    android:layout_margin="16dp"
    tools:context="ru.maryonegames.android.aliasgame.Main5Activity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
    <TextView
        android:id="@+id/txt_lst_word"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="the_last_word"
        android:textColor="#FF9B05"
        android:textSize="32sp"  />

    <TextView
        android:id="@+id/txt_the_last_word"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="the_last_word"
        android:textColor="#05386C"
        android:textSize="32sp" />


    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
    <Button
        android:id="@+id/btn_cmdA"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="cmd1"
        android:padding="0dp"
        android:layout_margin="0dp"

        android:text="" />

    <Button
        android:id="@+id/btn_cmdB"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="cmd2"
        android:padding="0dp"
        android:layout_margin="0dp"

        android:text="" />

    <Button
        android:id="@+id/btn_noname"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="noname"
        android:text="@string/nobody"
        android:padding="0dp"
        android:layout_margin="0dp"
        style="@style/ButtonStyle"
        />
    </LinearLayout>
</LinearLayout>
